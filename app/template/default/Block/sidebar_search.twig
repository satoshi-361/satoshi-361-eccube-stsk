{% block stylesheet %}
<style>
  @media only screen and (max-width: 768px) {
    #side.is_active {
      position: fixed !important;
      top: 0 !important;
      left: 0 !important;
      height: 100vh;
      overflow-y: scroll;
      z-index: 101;
    }
    #hover_panel.is_active{
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: rgba(0,0,0,.5);
      z-index: 2;
    }
  }
</style>
{% endblock stylesheet %}
{% block javascript %}
    <script>
      $(function() {
        $('#side li a').click(function(e){
          e.preventDefault();

          $('input[name="category_id"]').val($(this).attr('value'));
          $('#search_by_category').click();
        });
        $('.category a').click(function(e){
          e.preventDefault();

          $('input[name="category_id"]').val($(this).attr('value'));
          $('#search_by_category').click();
        });
      });
    </script>
{% endblock javascript %}
<div id="hover_panel"></div>
<div id="side" style="left: -100%;">
    <form method="get" style="display: none" action="{{ url('product_list') }}">
      <input type="number" name="category_id">
      <button type="submit" id="search_by_category">
      </button>
    </form>

    <div class="inner">
        <section>
            <div class="side_title_img">
                <img src="{{ asset('assets/img/common/カテゴリで探す.svg') }}" alt="">
            </div>
            <ul class="line">
                {% for item in Categories|reverse if item.is_visible == 1 %}
                  <li>
                    <a href="" value="{{ item.id }}">
                      <p class="icon"><img src="{{ asset('assets/img/'~item.image) }}" alt=""></p>
                      <p class="label">{{ item.name }}</p>
                    </a>
                  </li>
                {% endfor %}
            </ul>
        </section>
        <section class="bg">
            <div class="side_title_img">
                <img src="{{ asset('assets/img/common/価格帯で探す.svg') }}" alt="">
            </div>
            <ul class="nobox">
                {% for item in SearchPrices|reverse if item.is_visible == 1 %}
                  <li><a href="" value="{{ item.id }}">{{ item.name }}</a></li>
                {% endfor %}
            </ul>
        </section>
        <section>
            <div class="side_title_img">
                <img src="{{ asset('assets/img/common/ターゲットで探す.svg') }}" alt="">
            </div>
            <ul class="line">
                {% for item in Targets|reverse if item.is_visible == 1 %}
                  <li>
                    <a href="" value="{{ item.id }}">
                      <p class="icon"><img src="{{ asset('assets/img/'~item.image) }}" alt=""></p>
                      <p class="label">{{ item.name }}</p>
                    </a>
                  </li>
                {% endfor %}
            </ul>
        </section>
        <section class="bg">
            <div class="side_title_img">
                <img src="{{ asset('assets/img/common/目的・シーンで探す.svg') }}" alt="">
            </div>
            <ul class="line">
                {% for item in Scenes|reverse if item.is_visible == 1 %}
                  <li>
                    <a href="" value="{{ item.id }}">
                      <p class="icon"><img src="{{ asset('assets/img/'~item.image) }}" alt=""></p>
                      <p class="label">{{ item.name }}</p>
                    </a>
                  </li>
                {% endfor %}
            </ul>
        </section>
        <section>
            <div class="side_title_img">
                <img src="{{ asset('assets/img/common/本体カラーで探す.svg') }}" alt="">
            </div>
            <ul class="nobox color_menu">
                {% for item in Colors|reverse if item.is_visible == 1 %}
                  <li>
                      <a href="" value="{{ item.id }}">
                        <img src="{{ asset('assets/img/'~item.image) }}" alt="">
                        <span>{{ item.name }}</span>
                      </a>
                  </li>
                {% endfor %}
            </ul>
        </section>
        <section style="background: white">
            <div class="side_title_img">
                <img src="{{ asset('assets/img/common/印刷で探す.svg') }}" alt="">
            </div>
            <ul class="nobox">
                {% for item in PrintMethods|reverse if item.is_visible == 1 %}
                  <li>
                    <a href="" value="{{ item.id }}">
                      <img style="width: 25px;height: auto;" src="{{ asset('assets/img/'~item.image) }}" alt=""> 
                      <span>{{ item.name }}</span>
                    </a>
                  </li>
                {% endfor %}
            </ul>
        </section>
        <section>
            <a href="../LP1/index.html" target="_blank" style="display: block; margin-bottom: 40px">
              <img style="width: 100%;height: auto;" src="{{ asset('assets/img/side/LP1.svg') }}" alt=""> 
            </a>
            <a href="../LP2/index.php" target="_blank" style="display: block; margin-bottom: 40px">
              <img style="width: 100%;height: auto;" src="{{ asset('assets/img/side/LP2.svg') }}" alt=""> 
            </a>
        </section>
    </div>
</div>